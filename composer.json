{
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": "^8.0",
        "roots/acorn": "^2.0"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "platform": {
            "php": "8.0"
        }
    },
    "autoload": {
        "psr-4": {
            "Buildystrap\\": "src"
        }
    },
    "acorn": {
        "providers": []
    },
    "scripts": {
        "dev": "composer install",
        "build": "composer install --no-dev"
    }
}
