{
    "name": "handmadeweb/buildystrap-parent",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Aaron Curle",
            "email": "aaron@handmadeweb.com.au"
        },
        {
            "name": "John Pieters",
            "email": "john@handmadeweb.com.au"
        },
        {
            "name": "Michael Rook",
            "email": "michael@handmadeweb.com.au"
        }
    ],
    "scripts": {
        "dev": "composer install",
        "test": "vendor/bin/phpunit",
        "build": "composer install && vendor/bin/php-cs-fixer fix && composer install --no-dev",
        "post-autoload-dump": [
          "Roots\\Acorn\\ComposerScripts::postAutoloadDump"
        ]
    },
    "require": {
        "php": "^8.0",
        "roots/acorn": "^3.0",
        "spatie/blink": "^1.2"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.8",
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "Buildystrap\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Buildystrap\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "platform": {
            "php": "8.0.2"
        }
    }
}
